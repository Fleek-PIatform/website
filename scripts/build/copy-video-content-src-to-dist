#!/bin/bash

sed_replace() {
  if [[ "$OSTYPE" == "darwin"* ]]; then
    sed -i '' "$@"
  else
    sed -i "$@"
  fi
}

src_dir="src"
dist_dir="dist"

src_content_dir="$src_dir/content"
if [[ ! -d "$src_content_dir" ]]; then
  echo "üëπ Oops! Missing the 'content' in the source directory..."
  exit 1
fi

find "$src_content_dir" -type f -name "*.mp4" | while read -r src_file; do
  dist_file="${src_file/src\/content/$dist_dir}"
  dist_file_dirname=$(dirname "$dist_file")
  if [[ ! -d "$dist_file_dirname" ]]; then
    echo "üëπ Oops! The distribution directory $dist_file_dirname doesn't exist. Run the script after the astro build command, please!"
    exit 1
  fi

  if ! cp "$src_file" "$dist_file"; then
    echo "‚ùå Failed to copy $src_file to $dist_file"
    exit 1
  else
    echo "‚úÖ Copied $src_file to $dist_file"
  fi

  video_filename=$(basename "$src_file")
  dist_html_file="${src_file/src\/content/dist}"
  dist_html_dirname=$(dirname "$dist_html_file")
  index_html="$dist_html_dirname/index.html"
  target_replace_path="${dist_file/$dist_dir/}"

  if ! grep -q "\./$video_filename" "$index_html"; then
    continue
  fi
  
  if ! sed_replace "s|\./$video_filename|$target_replace_path|g" "$index_html"; then
    echo "‚ùå Failed to replace path in file $index_html"
    exit 1
  else
    echo "‚úÖ Replaced path in $index_html from $video_filename to $target_replace_path"
  fi
done

echo "üëç Done! Copied the content video files successfully."
