#!/bin/bash

if [[ "$#" -ne 1 && ! "$2" == 'write' ]]; then
    echo "ğŸ‘¹ Oops! Missing origin and target paths! Please do $0 <target_path>"
    exit 1
fi

target_dir="$1"

if [[ ! "$2" == 'write' ]]; then
  echo "ğŸ¤– Dry-run mode"
else
  echo "ğŸ¤– Gif to Mp4 process in write-run mode"
  while read -rp "â“Are you sure you want to continue (yes/no)? " answer; do
    if [[ "$answer" == [nN] || "$answer" == [nN][oO] ]]; then
	  echo "ğŸ¦– Exited the Gif to Mp4 process"
	  exit 1
    elif [[ "$answer" == [yY] || "$answer" == [yY][eE][sS] ]]; then
      echo "ğŸ™ The Gif to Mp4 will now start, be patient..."
	  sleep 3
      break;
    fi
	
    echo  "ğŸ’© Uh-oh! We expect a yes or no answer. Try again..."
  done;
fi

find "$target_dir" -type f -name "*.gif" | while read -r gif; do
	echo "[File] $gif"

	dir=$(dirname "$gif")
	base_name=$(basename "$gif" .gif)

	output="$dir/$base_name.mp4"

	if [[ ! "$2" == 'write' ]]; then
		echo "ğŸ«¡ Should convert $gif -> $output"
	else
		if [[ -f "$gif" ]] && [[ -f "$output" ]]; then
			if rm -f "$gif"; then
				echo "âœ… Deleted $gif"
			fi
		else
		  if ! ffmpeg -i "$gif" -vf "fps=24,scale=480:-1:flags=lanczos" -c:v libx264 -preset slow -crf 22 -pix_fmt yuv420p -movflags +faststart "$output"; then
				echo "ğŸ‘¹ Oops! Failed to convert $gif -> $output"
			else
				echo "âœ… Converted $gif to $output"
			fi		
		fi	
	fi

	echo
	echo
done

echo "ğŸ‘ Gif to Mp4 process completed."
