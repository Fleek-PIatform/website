---
import Layout from '@layouts/Page.astro';
import StorageImageSlide from "@components/StorageImageSlide";
import StorageFeatCards from "@components/StorageFeatCards";
import StorageFleekMakesBreeze from "@components/StorageFleekMakesBreeze"
import StorageMultipleOptions from "@components/StorageMultipleOptions";
import StorageFileUploadDemo from "@components/StorageFileUploadDemo";
import StorageDoneRight from "@components/StorageDoneRight";
import LiveOnTheEdge from "@components/LiveOnTheEdge";
import { Image, getImage } from 'astro:assets';
import imgFleekSdkUploadToIpfs from "@images/fleek-sdk-uploadtoipfs.png";
import imgFleekCliUploadFile from "@images/fleek-cli-upload-file.png";
// Warn: Use getImage carefully as it generates a big amount of source-code due to its async nature
const optImgFleekSdkUploadToIpfs = await getImage({src: imgFleekSdkUploadToIpfs, format: 'webp'});
const optImgFleekCliUploadFile = await getImage({src: imgFleekCliUploadFile, format: 'webp'});
---

<Layout title="Fleek | Build Lightning Fast Web3 Apps">
  <main class="flex flex-col gap-16 pb-64">
    <StorageImageSlide
      client:load
      optImgFleekSdkUploadToIpfs={optImgFleekSdkUploadToIpfs.src}
      optImgFleekCliUploadFile={optImgFleekCliUploadFile.src}
    />
    <StorageFeatCards />
    <StorageFleekMakesBreeze />
    <StorageMultipleOptions />
    <StorageFileUploadDemo />
    <StorageDoneRight />
    <LiveOnTheEdge />
  </main>
</Layout>
