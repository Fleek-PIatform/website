---
import { getCollection } from 'astro:content';
import BlogPageLayout from '../../layouts/BlogPage.astro';
import { getEntry } from 'astro:content';
import GithubEditLink from '@components/GitHubEditLink.astro';

export async function getStaticPaths() {
  const docsEntries = await getCollection('blog');
  return docsEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const currentPage = Astro.url.pathname;
const currentFile = `${currentPage.replace(/\/$/, '')}.md`;

// TODO: use function to verify that file exists indeed
const entryPath = Astro.url.pathname.split('/').filter(Boolean);
const { id } = await getEntry(...entryPath);
const githubEditUrlPathname = `${entryPath[0]}/${id}`;
---

<BlogPageLayout title={entry.data.title}>
  <article class="blog">
    <h1>{entry.data.title}</h1>
    <p>
      <img src={entry.data.image.src} alt={entry.data.title} />
    </p>
    <Content />
    <GithubEditLink pathname={githubEditUrlPathname} />
  </article>
</BlogPageLayout>
