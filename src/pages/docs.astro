---
import Layout from '@layouts/ContentPage.astro';
import Container from "@components/Container";
import generateSidebarDS, { generateSidebarDSByUserOrder } from '@utils/generateSidebarDS';
import Sidebar from '@components/Sidebar';
import { getCollection } from "astro:content";

const pageTitle = "Documentation";
const allPosts = await getCollection("docs");
const orderBy = [{
	category: 'randomx',
	order: 10,
}, {
	category: 'categoryx',
	order: 30,
}, {
	category: 'has_whitespace_and-dash',
	order: 20,
}];

console.log('[debug] allPosts', allPosts);

const sidebarSorted = generateSidebarDSByUserOrder(allPosts, orderBy);

console.log('[debug] sidebarSorted', sidebarSorted)
---

<Layout title="Fleek | Build Lightning Fast Web3 Apps">
	<div class="flex flex-col gap-24 lg:gap-32">
		<Sidebar
			client:only="react"
			data={sidebarSorted}
		/>
	</div>
</Layout>

