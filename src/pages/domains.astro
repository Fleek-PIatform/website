---
import Layout from '@layouts/Page.astro';
import NSManagement from "@components/NSManagement";
import DomainsSetAndForget from "@components/DomainsSetAndForget";
import DomainsNeedsCovered from "@components/DomainsNeedsCovered";
import LiveOnTheEdge from "@components/LiveOnTheEdge";
import { Image } from 'astro:assets';
import imgDnsEnsIpnsManagement from "@images/dns-ens-ipns-management.png";
---

<Layout title="Fleek | Build Lightning Fast Web3 Apps">
  <main class="flex flex-col gap-16 pb-64">
    <NSManagement client:load cta="Try it out">
      <Image
        class="object-contain mix-blend-screen"
        src={imgDnsEnsIpnsManagement}
        alt="DNS/ENS/IPNS Management"
        slot="OptImgDnsEnsIpnsManagement"
      />
    </NSManagement>
    <DomainsSetAndForget />
    <DomainsNeedsCovered />
    <LiveOnTheEdge />
  </main>
</Layout>
