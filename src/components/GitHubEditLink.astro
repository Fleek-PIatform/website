---
import settings from '../settings.json';

const branch = 'main';
const { pathname } = Astro.props;
---

<div id="githubEdit">
  <a href={`${settings.github.editUrl}/${branch}/src/content/${pathname}`} target="_blank">
    <svg
      fill="currentColor"
      height="16"
      width="16"
      viewBox="0 0 40 40"
      class="inline"
      aria-hidden="true"
      ><g
        ><path
          d="m34.5 11.7l-3 3.1-6.3-6.3 3.1-3q0.5-0.5 1.2-0.5t1.1 0.5l3.9 3.9q0.5 0.4 0.5 1.1t-0.5 1.2z m-29.5 17.1l18.4-18.5 6.3 6.3-18.4 18.4h-6.3v-6.2z"
        ></path></g
      ></svg
    >
    Edit this page
  </a>
</div>
