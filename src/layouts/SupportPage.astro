---
import '@styles/supportPage.css';
import settings from '@base/settings.json';

import BaseHtml from './BaseHtml.astro';
const zdKey = settings.support.zendeskKey;
const srcLink = `https://static.zdassets.com/ekr/snippet.js?key=${zdKey}`;

const { title, description, image, slug } = Astro.props;
---

<BaseHtml
  title={title}
  ogMeta={{
    title,
    description,
    image,
    slug,
  }}
>
  <slot />

  <script id="ze-snippet" defer src={srcLink}></script>
</BaseHtml>
